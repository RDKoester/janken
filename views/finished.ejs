<%- include("partials/header"); -%>

<!-- Explaining the player how to restart the game -->

<h1 id="result" class="result"><%= gameResult.result %></h1>
<p class="again">(click on any hand to try again!)</p>

<!-- Showing the game result -->

<h1 id="playerPick" class="ppH1"><%= gameResult.pp %></h1>

<!-- Showing the players pick  -->
<div class="laptop-screen">
  <div>
    <h1 class="choice">Your choice:</h1>
    <button class="flex-item ppImg">
      <img src="" id="ppImg" />
    </button>
  </div>

  <div class="vs">
    <h1 class="result">VS</h1> 
  </div>

<!-- Showing what the computer generated -->

  <div>
    <h1 id="computerPick" class="cpH1"><%= gameResult.cp %></h1>
    <h1 class="choice">Your opponents choice:</h1>
    <button class="flex-item ppImg">
      <img src="" id="cpImg" />
    </button>
  </div>
</div>

<%- include("partials/footer"); -%>
